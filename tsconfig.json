
{
    "compilerOptions": {
      "lib": ["es2021"],
      "target": "es2017",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true
     

    },
     "include": [
       "src/**/*.ts"
     ],
     "exclude": [
       "node_modules"
    ]
  }





